<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainPane" fx:controller="com.stackedsuccess.controllers.SkinShopController" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Button layoutX="40.0" layoutY="68.0" mnemonicParsing="false" onAction="#onBack" text="Back" />
        <Label layoutX="460.0" layoutY="71.0" text="Skin Shop" styleClass="gen-text" />
        <Label fx:id="highScoreLabel" layoutX="1000.0" layoutY="50.0" text="High Score: 0" style="-fx-font-size: 18px;" />
        <HBox layoutX="50.0" layoutY="150.0" prefWidth="1200.0" prefHeight="600.0">
            <VBox alignment="CENTER" spacing="20.0" prefWidth="600.0">
                <Label text="Selected Skin:" style="-fx-font-size: 18px;" />
                <ImageView fx:id="currentSkinImageView" fitWidth="300.0" fitHeight="300.0" preserveRatio="true" />
                <Label fx:id="skinNameLabel" text="Skin Name" style="-fx-font-size: 24px;" />
            </VBox>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" prefWidth="600.0" prefHeight="600.0" pannable="true">
                <content>
                    <VBox fx:id="skinDisplayBox" spacing="20.0" fillWidth="true" alignment="CENTER">
                    </VBox>
                </content>
            </ScrollPane>

        </HBox>
    </children>
</AnchorPane>
